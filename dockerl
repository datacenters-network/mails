#!/bin/sh -eu

ME=$(realpath $(dirname $0))

if [ ! -f $ME/.env ]; then
    printf 'Missing env file at: %s/.env\n' "${ME}"
    exit 1
fi

# Load up .env
set -o allexport
source $ME/.env
set +o allexport

cd $ME

if [ -z "${NO_VERBOSE:-}" ]; then
    printf 'Running in: %s\n' "${DOCKER_PROJECT_NAME}"
fi

docker-compose -p ${DOCKER_PROJECT_NAME} $@
